<h1>Create a New Artist</h1>
<%= form_for @artist do |f| %>
  <p><%= f.label :name %></p>
  <p><%= f.text_field :name %></p><br>

  <p><%= f.label :username %></p>
  <p><%= f.text_field :username %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p><br>

  <p><%= f.label "Confirm Password: " %></p>
  <p><%= f.password_field :password_confirmation %></p><br><br>

  <p><%= f.label "Where are you from?" %><br>
    <%= f.text_field :city, placeholder: 'city' %><%= f.text_field :state, placeholder: 'state' %></p>

  <p><%= f.label :abstract, "Write a short abstract about your work" %></p>
  <p><%= f.text_area :abstract %></p><br>

  <p><%= f.label :bio, "Write a full bio" %></p>
  <p><%= f.text_area :bio %></p><br>

  <p><%= f.label "Include a Link for Your Profile Picture" %></p>
  <p><%= f.text_field :img_link %></p>

  <%= f.submit "Create new Artist" %>
<% end %>
