 <%= render partial: "layouts/profile_row", locals: {counter: artist_iteration.index} %>

    <div class="col-xs-4 " style="min-height:360; max-height:360;">
        <div class="panel panel-default">

          <div class="panel-heading">
            <h3 class="panel-title"><%= link_to "#{artist.name} - #{artist.artist_type}", artist_path(artist) %></h3>
          </div>

          <div class="panel-body">
          <%= link_to image_tag("#{artist.img_link}",height: "200px" ,width: "200px"), artist_path(artist) %>
            <br>
            <p>Abstract <%=artist.abstract %> </p>
            <div style="float: right">
            <% if current_fan %>
              <%= form_tag '/artist_fans' do %>
                <%= hidden_field_tag "artist_id", artist.id %>
                <%= submit_tag "Become a Fan", class: "btn btn-primary" %>
              <% end %>
            <% end %>
            </div>
          </div>

        </div>
      </div>


  <%  if (artist_iteration.index+1)%3==0 && artist_iteration.index != 0 %>
    </div>
  <% end %>
