
<div class="panel panel-default col-xs-12">
  <div class="panel-heading">
    <h3 class="panel-title">Filter By Genre Or Search By Name:</h3>
  </div>
  
  <div class="panel-body">
    <div class="container col-xs-8"> 
    <% Medium.genres.each do |genre| %>
        <button><%= link_to genre,{:controller => "#{type.class.to_s.pluralize.downcase}", :action => "index", :genre_name => genre} %></button>
      <% end %>
     </div>
    <div class="container col-xs-4"> 
     <%= form_tag("\/#{type.class.to_s.pluralize.downcase}", method: "get") do %>
      <%= text_field_tag :search, params[:search], placeholder: "#{type.class.to_s} name" %>
      <%= submit_tag("Search by #{type.class.to_s}") %>
      <% end %>
   </div>
  </div>
</div>